@page "/counter"

<div cds-layout="vertical gap:lg">
    <h1 cds-text="title">Counter</h1>

    <p cds-text="body">Current count: @currentCount</p>

    <cds-button @onclick="IncrementCount">click me</cds-button>
</div>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}
